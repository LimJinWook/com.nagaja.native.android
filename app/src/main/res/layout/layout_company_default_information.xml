<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:fresco="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg_color_ffffff"
    android:orientation="vertical">

    <androidx.core.widget.NestedScrollView
        android:id="@+id/fragment_faq_scroll_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true"
        android:overScrollMode="never">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="16dp"
                    android:text="@string/text_company_information"
                    android:textColor="@color/text_color_222222"
                    android:textSize="@dimen/size_14"
                    android:textStyle="bold" />

                <!-- Company Information (English) -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_marginStart="16dp"
                    android:layout_marginTop="9dp"
                    android:layout_marginEnd="16dp"
                    android:background="@drawable/bg_boarder">

                    <EditText
                        android:id="@+id/layout_company_default_information_company_english_name_edit_text"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginStart="17dp"
                        android:layout_marginEnd="17dp"
                        android:background="@null"
                        android:maxLines="1"
                        android:inputType="text"
                        android:imeOptions="actionNext"
                        android:hint="@string/text_english"
                        android:textColor="@color/text_color_222222"
                        android:textColorHint="@color/text_color_bebebe"
                        android:textSize="@dimen/size_14" />

                </LinearLayout>

                <!-- Company Information (Korea) -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_marginStart="16dp"
                    android:layout_marginTop="9dp"
                    android:layout_marginEnd="16dp"
                    android:background="@drawable/bg_boarder">

                    <EditText
                        android:id="@+id/layout_company_default_information_company_korea_name_edit_text"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginStart="17dp"
                        android:layout_marginEnd="17dp"
                        android:background="@null"
                        android:maxLines="1"
                        android:inputType="text"
                        android:imeOptions="actionNext"
                        android:hint="@string/text_korean"
                        android:textColor="@color/text_color_222222"
                        android:textColorHint="@color/text_color_bebebe"
                        android:textSize="@dimen/size_14" />

                </LinearLayout>

                <!-- Company Information (Filipino) -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_marginStart="16dp"
                    android:layout_marginTop="9dp"
                    android:layout_marginEnd="16dp"
                    android:background="@drawable/bg_boarder">

                    <EditText
                        android:id="@+id/layout_company_default_information_company_filipino_name_edit_text"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginStart="17dp"
                        android:layout_marginEnd="17dp"
                        android:background="@null"
                        android:maxLines="1"
                        android:inputType="text"
                        android:imeOptions="actionNext"
                        android:hint="@string/text_filipino"
                        android:textColor="@color/text_color_222222"
                        android:textColorHint="@color/text_color_bebebe"
                        android:textSize="@dimen/size_14" />

                </LinearLayout>

                <!-- Company Information (Chinese) -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_marginStart="16dp"
                    android:layout_marginTop="9dp"
                    android:layout_marginEnd="16dp"
                    android:background="@drawable/bg_boarder">

                    <EditText
                        android:id="@+id/layout_company_default_information_company_chinese_name_edit_text"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginStart="17dp"
                        android:layout_marginEnd="17dp"
                        android:background="@null"
                        android:maxLines="1"
                        android:inputType="text"
                        android:imeOptions="actionNext"
                        android:hint="@string/text_chinese"
                        android:textColor="@color/text_color_222222"
                        android:textColorHint="@color/text_color_bebebe"
                        android:textSize="@dimen/size_14" />

                </LinearLayout>

                <!-- Company Information (Japanese) -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_marginStart="16dp"
                    android:layout_marginTop="9dp"
                    android:layout_marginEnd="16dp"
                    android:background="@drawable/bg_boarder">

                    <EditText
                        android:id="@+id/layout_company_default_information_company_japanese_name_edit_text"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginStart="17dp"
                        android:layout_marginEnd="17dp"
                        android:background="@null"
                        android:maxLines="1"
                        android:inputType="text"
                        android:imeOptions="actionDone"
                        android:hint="@string/text_japanese"
                        android:textColor="@color/text_color_222222"
                        android:textColorHint="@color/text_color_bebebe"
                        android:textSize="@dimen/size_14" />

                </LinearLayout>

                <!-- Image Recycler View -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="17dp"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="16dp"
                        android:text="@string/text_main_image"
                        android:textColor="@color/text_color_222222"
                        android:textSize="@dimen/size_14"
                        android:textStyle="bold" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="2dp"
                        android:orientation="horizontal">

                        <androidx.recyclerview.widget.RecyclerView
                            android:id="@+id/layout_company_default_information_company_image_recycler_view"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:overScrollMode="never" />

                    </LinearLayout>

                </LinearLayout>

                <!-- Company Address -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="17dp"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="16dp"
                        android:text="@string/text_company_address_and_location"
                        android:textColor="@color/text_color_222222"
                        android:textSize="@dimen/size_14"
                        android:textStyle="bold" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:layout_marginStart="16dp"
                        android:layout_marginTop="9dp"
                        android:layout_marginEnd="16dp"
                        android:background="@drawable/bg_boarder">

                        <TextView
                            android:id="@+id/layout_company_default_information_address_text_view"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:gravity="center_vertical"
                            android:layout_marginStart="17dp"
                            android:layout_marginEnd="17dp"
                            android:background="@null"
                            android:hint="@string/text_input_company_address"
                            android:textColor="@color/text_color_222222"
                            android:textColorHint="@color/text_color_bebebe"
                            android:textSize="@dimen/size_14" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:layout_marginStart="16dp"
                        android:layout_marginTop="9dp"
                        android:layout_marginEnd="16dp"
                        android:background="@drawable/bg_boarder">

                        <EditText
                            android:id="@+id/layout_company_default_information_address_detail_edit_text"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_marginStart="17dp"
                            android:layout_marginEnd="17dp"
                            android:background="@null"
                            android:hint="@string/text_input_company_detail_address"
                            android:textColor="@color/text_color_222222"
                            android:textColorHint="@color/text_color_bebebe"
                            android:textSize="@dimen/size_14" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:layout_marginStart="16dp"
                        android:layout_marginTop="9dp"
                        android:layout_marginEnd="16dp"
                        android:gravity="center_vertical"
                        android:orientation="horizontal">

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:background="@drawable/bg_boarder">

                            <TextView
                                android:id="@+id/layout_company_default_information_location_edit_text"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:gravity="center_vertical"
                                android:layout_marginStart="17dp"
                                android:layout_marginEnd="17dp"
                                android:background="@null"
                                android:enabled="false"
                                android:hint="@string/text_input_company_location"
                                android:textColor="@color/text_color_222222"
                                android:textColorHint="@color/text_color_bebebe"
                                android:textSize="@dimen/size_14" />
                        </LinearLayout>

                        <ImageView
                            android:id="@+id/fragment_application_company_member_map_image_view"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:padding="5dp"
                            android:src="@drawable/icon_location_black" />

                    </LinearLayout>

                    <!-- Manager Information -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="17dp"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="16dp"
                            android:text="@string/text_manager_information"
                            android:textColor="@color/text_color_222222"
                            android:textSize="@dimen/size_14"
                            android:textStyle="bold" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="40dp"
                            android:layout_marginStart="16dp"
                            android:layout_marginTop="9dp"
                            android:layout_marginEnd="16dp"
                            android:background="@drawable/bg_boarder">

                            <EditText
                                android:id="@+id/layout_company_default_information_manager_name_edit_text"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_marginStart="17dp"
                                android:layout_marginEnd="17dp"
                                android:background="@null"
                                android:maxLines="1"
                                android:inputType="text"
                                android:imeOptions="actionNext"
                                android:hint="@string/text_input_manager_name"
                                android:textColor="@color/text_color_222222"
                                android:textColorHint="@color/text_color_bebebe"
                                android:textSize="@dimen/size_14" />

                        </LinearLayout>

                    </LinearLayout>

                    <!-- Other Information -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="17dp"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="16dp"
                            android:text="@string/text_other_information"
                            android:textColor="@color/text_color_222222"
                            android:textSize="@dimen/size_14"
                            android:textStyle="bold" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="40dp"
                            android:layout_marginStart="16dp"
                            android:layout_marginTop="9dp"
                            android:layout_marginEnd="16dp"
                            android:background="@drawable/bg_boarder">

                            <EditText
                                android:id="@+id/layout_company_default_information_phone_number_edit_text"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_marginStart="17dp"
                                android:layout_marginEnd="17dp"
                                android:background="@null"
                                android:hint="@string/text_input_phone_number"
                                android:maxLines="1"
                                android:inputType="phone"
                                android:imeOptions="actionNext"
                                android:textColor="@color/text_color_222222"
                                android:textColorHint="@color/text_color_bebebe"
                                android:textSize="@dimen/size_14" />

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="40dp"
                            android:layout_marginStart="16dp"
                            android:layout_marginTop="9dp"
                            android:layout_marginEnd="16dp"
                            android:background="@drawable/bg_boarder">

                            <EditText
                                android:id="@+id/layout_company_default_information_email_edit_text"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_marginStart="17dp"
                                android:layout_marginEnd="17dp"
                                android:background="@null"
                                android:maxLines="1"
                                android:inputType="textEmailAddress"
                                android:imeOptions="actionNext"
                                android:hint="@string/text_input_email_information"
                                android:textColor="@color/text_color_222222"
                                android:textColorHint="@color/text_color_bebebe"
                                android:textSize="@dimen/size_14" />

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="40dp"
                            android:layout_marginStart="16dp"
                            android:layout_marginTop="9dp"
                            android:layout_marginEnd="16dp"
                            android:background="@drawable/bg_boarder">

                            <EditText
                                android:id="@+id/layout_company_default_information_facebook_edit_text"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_marginStart="17dp"
                                android:layout_marginEnd="17dp"
                                android:background="@null"
                                android:maxLines="1"
                                android:inputType="text"
                                android:imeOptions="actionNext"
                                android:hint="@string/text_input_facebook_information"
                                android:textColor="@color/text_color_222222"
                                android:textColorHint="@color/text_color_bebebe"
                                android:textSize="@dimen/size_14" />

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="40dp"
                            android:layout_marginStart="16dp"
                            android:layout_marginTop="9dp"
                            android:layout_marginEnd="16dp"
                            android:background="@drawable/bg_boarder">

                            <EditText
                                android:id="@+id/layout_company_default_information_kakao_edit_text"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_marginStart="17dp"
                                android:layout_marginEnd="17dp"
                                android:background="@null"
                                android:maxLines="1"
                                android:inputType="text"
                                android:imeOptions="actionNext"
                                android:hint="@string/text_input_kakao_talk_information"
                                android:textColor="@color/text_color_222222"
                                android:textColorHint="@color/text_color_bebebe"
                                android:textSize="@dimen/size_14" />

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="40dp"
                            android:layout_marginStart="16dp"
                            android:layout_marginTop="9dp"
                            android:layout_marginEnd="16dp"
                            android:background="@drawable/bg_boarder">

                            <EditText
                                android:id="@+id/layout_company_default_information_line_edit_text"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_marginStart="17dp"
                                android:layout_marginEnd="17dp"
                                android:background="@null"
                                android:maxLines="1"
                                android:inputType="text"
                                android:imeOptions="actionDone"
                                android:hint="@string/text_input_line_information"
                                android:textColor="@color/text_color_222222"
                                android:textColorHint="@color/text_color_bebebe"
                                android:textSize="@dimen/size_14" />

                        </LinearLayout>

                    </LinearLayout>

                    <!-- Content View -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="17dp"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="16dp"
                            android:text="@string/text_company_description"
                            android:textColor="@color/text_color_222222"
                            android:textSize="@dimen/size_14"
                            android:textStyle="bold" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="100dp"
                            android:layout_marginStart="16dp"
                            android:layout_marginTop="9dp"
                            android:layout_marginEnd="16dp"
                            android:background="@drawable/bg_boarder">

                            <EditText
                                android:id="@+id/layout_company_default_information_company_description_edit_text"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_margin="10dp"
                                android:background="@null"
                                android:gravity="top"
                                android:hint="@string/text_hint_input_company_description"
                                android:inputType="textMultiLine"
                                android:scrollbars="vertical"
                                android:textColor="@color/text_color_222222"
                                android:textColorHint="@color/text_color_bebebe"
                                android:textSize="@dimen/size_14" />

                        </LinearLayout>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="12dp"
                        android:orientation="horizontal"
                        android:gravity="center_vertical|end"
                        android:visibility="gone">

                        <TextView
                            android:id="@+id/layout_company_default_information_comment_word_count_text_view"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="0"
                            android:textColor="@color/text_color_bebebe"
                            android:textSize="@dimen/size_12" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="3dp"
                            android:layout_marginEnd="16dp"
                            android:text="/ 300"
                            android:textColor="@color/text_color_bebebe"
                            android:textSize="@dimen/size_12" />

                    </LinearLayout>

                    <!-- Company License View -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="32dp"
                        android:orientation="horizontal">

                        <LinearLayout
                            android:layout_width="162dp"
                            android:layout_height="184dp">

                            <RelativeLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="16dp">

                                <com.facebook.drawee.view.SimpleDraweeView
                                    android:id="@+id/layout_company_default_information_license_image_view"
                                    android:layout_width="match_parent"
                                    android:layout_height="184dp"
                                    app:roundedCornerRadius="10dp"
                                    app:actualImageScaleType="fitXY"
                                    android:background="@drawable/bg_default"
                                    fresco:placeholderImage="@drawable/bg_default" />

                                <LinearLayout
                                    android:id="@+id/layout_company_default_information_license_full_screen_view"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_alignParentEnd="true"
                                    android:layout_alignParentBottom="true"
                                    android:background="@drawable/bg_license"
                                    android:gravity="center">

                                    <ImageView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:src="@drawable/icon_zoom_in" />

                                </LinearLayout>

                            </RelativeLayout>

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="15dp"
                            android:layout_marginEnd="16dp"
                            android:orientation="vertical">

                            <!-- Company License Number -->
                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="vertical"
                                android:visibility="gone">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="@string/text_company_license"
                                    android:textColor="@color/text_color_222222"
                                    android:textSize="@dimen/size_14"
                                    android:textStyle="bold" />

                                <TextView
                                    android:id="@+id/layout_company_default_information_license_number_text_view"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="5dp"
                                    android:textColor="@color/text_color_626262"
                                    android:textSize="@dimen/size_14" />

                            </LinearLayout>

                            <!-- Master Name -->
                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="9dp"
                                android:orientation="vertical"
                                android:visibility="gone">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="@string/text_master_name"
                                    android:textColor="@color/text_color_222222"
                                    android:textSize="@dimen/size_14"
                                    android:textStyle="bold" />

                                <TextView
                                    android:id="@+id/layout_company_default_information_owner_name_text_view"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="5dp"
                                    android:textColor="@color/text_color_626262"
                                    android:textSize="@dimen/size_14" />

                            </LinearLayout>

                            <!-- Manager Name -->
                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="9dp"
                                android:orientation="vertical">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="@string/text_manager_name"
                                    android:textColor="@color/text_color_222222"
                                    android:textSize="@dimen/size_14"
                                    android:textStyle="bold" />

                                <TextView
                                    android:id="@+id/layout_company_default_information_manager_name_text_view"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="5dp"
                                    android:textColor="@color/text_color_626262"
                                    android:textSize="@dimen/size_14" />

                            </LinearLayout>

                        </LinearLayout>

                    </LinearLayout>

                    <!-- Company License File -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="28dp"
                        android:layout_marginBottom="50dp"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="16dp"
                            android:text="@string/text_company_license_file"
                            android:textColor="@color/text_color_222222"
                            android:textSize="@dimen/size_14"
                            android:textStyle="bold" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="40dp"
                            android:layout_marginStart="16dp"
                            android:layout_marginTop="9dp"
                            android:layout_marginEnd="16dp"
                            android:background="@drawable/bg_boarder"
                            android:gravity="center_vertical"
                            android:orientation="horizontal">

                            <TextView
                                android:id="@+id/layout_company_default_information_license_file_name_text_view"
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_weight="1"
                                android:layout_marginStart="9dp"
                                android:layout_marginEnd="9dp"
                                android:gravity="center_vertical"
                                android:text="@string/text_attaching_files"
                                android:textColor="@color/text_color_bebebe"
                                android:textSize="@dimen/size_14" />

                            <ImageView
                                android:id="@+id/layout_company_default_information_license_link_text_view"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginEnd="9dp"
                                android:src="@drawable/icon_attachment" />

                        </LinearLayout>

                        <androidx.recyclerview.widget.RecyclerView
