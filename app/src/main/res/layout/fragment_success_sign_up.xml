<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/bg_color_ffffff"
        android:orientation="vertical"
        tools:context=".SignUp.SignUpActivity">

    <include
            layout="@layout/layout_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"
            android:text="@string/text_message_success_sign_up"
            android:textColor="@color/text_color_222222"
            android:textSize="@dimen/size_24" />

    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="29dp"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"
            android:text="@string/text_message_success_sign_up_2"
            android:textColor="@color/text_color_9f9f9f"
            android:textSize="@dimen/size_16" />
    
    <View 
            android:layout_width="1dp" 
            android:layout_height="0dp"
            android:layout_weight="1" />
    
    <TextView
            android:id="@+id/fragment_success_sign_up_confirm_text_view"
            android:layout_width="match_parent"
            android:layout_height="52dp"
            android:background="@color/bg_color_0d4d97"
            android:gravity="center"
            android:text="@string/text_confirm"
            android:textColor="@color/text_color_ffffff"
            android:textSize="@dimen/size_18" />

</LinearLayout>