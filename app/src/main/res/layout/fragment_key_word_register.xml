<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg_color_ffffff"
    android:orientation="vertical"
    tools:context=".KeyWord.KeyWordActivity">

    <include
        layout="@layout/layout_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="vertical">

        <com.skydoves.powerspinner.PowerSpinnerView
            android:id="@+id/fragment_key_word_register_type_spinner"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginStart="16dp"
            android:layout_marginTop="9dp"
            android:layout_marginEnd="16dp"
            android:background="@drawable/bg_code_phone_number_2"
            android:gravity="center_vertical"
            android:hint="@string/text_select_type"
            android:paddingStart="16dp"
            android:paddingEnd="16dp"
            android:textColor="@color/text_color_222222"
            android:textColorHint="@color/text_color_222222"
            android:textSize="@dimen/size_14"
            app:spinner_arrow_drawable="@drawable/icon_arrow"
            app:spinner_arrow_gravity="end"
            app:spinner_arrow_padding="8dp"
            app:spinner_item_array="@array/array_select_type"
            app:spinner_item_height="46dp"
            app:spinner_popup_animation="dropdown"
            app:spinner_popup_background="@drawable/bg_dialog_radius_popup_10dp"
            app:spinner_popup_elevation="14dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginStart="16dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="16dp"
            android:background="@drawable/bg_code_phone_number_2"
            android:gravity="center_vertical">

            <EditText
                android:id="@+id/fragment_key_word_register_edit_text"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="16dp"
                android:background="@null"
                android:hint="@string/text_hint_key_word"
                android:imeOptions="actionDone"
                android:inputType="text"
                android:textColor="@color/text_color_222222"
                android:textColorHint="@color/text_color_bebebe"
                android:textSize="@dimen/size_14" />

        </LinearLayout>

    </LinearLayout>


    <TextView
        android:id="@+id/fragment_key_word_register_confirm_text_view"
        android:layout_width="match_parent"
        android:layout_height="51dp"
        android:background="@color/bg_color_0d4d97"
        android:gravity="center"
        android:text="@string/text_confirm"
        android:textColor="@color/text_color_ffffff"
        android:textSize="@dimen/size_17"
        android:textStyle="bold" />

</LinearLayout>