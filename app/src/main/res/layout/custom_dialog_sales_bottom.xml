<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:fresco="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_boarder_half"
        android:orientation="vertical" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="13dp"
            android:orientation="horizontal"
            android:gravity="center_vertical" >

            <TextView
                android:id="@+id/custom_dialog_sales_bottom_title_text_view"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginStart="16dp"
                android:text="@string/text_person_setting"
                android:textColor="@color/text_color_222222"
                android:textSize="@dimen/size_16"
                android:textStyle="bold" />

            <ImageView
                android:id="@+id/custom_dialog_sales_bottom_cancel_image_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="6dp"
                android:padding="10dp"
                android:src="@drawable/icon_cancel" />

        </LinearLayout>

        <include
            android:id="@+id/custom_dialog_sales_bottom_person_setting_view"
            layout="@layout/layout_custom_dialog_sales_bottom_person_setting"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <include
            android:id="@+id/custom_dialog_sales_bottom_day_off_view"
            layout="@layout/layout_custom_dialog_sales_bottom_day_off"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <include
            android:id="@+id/custom_dialog_sales_bottom_business_hours_view"
            layout="@layout/layout_custom_dialog_sales_bottom_business_time"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <include
            android:id="@+id/custom_dialog_sales_bottom_business_break_time_view"
            layout="@layout/layout_custom_dialog_sales_bottom_break_time"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/bg_color_ffffff" >

        <TextView
            android:id="@+id/custom_dialog_sales_bottom_business_register_text_view"
            android:layout_width="match_parent"
            android:layout_height="44dp"
            android:layout_marginTop="41dp"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"
            android:layout_marginBottom="30dp"
            android:gravity="center"
            android:background="@drawable/bg_button_radius_blue"
            android:text="@string/text_register"
            android:textColor="@color/text_color_ffffff"
            android:textSize="@dimen/size_14"
            android:textStyle="bold" />

    </LinearLayout>

</LinearLayout>
