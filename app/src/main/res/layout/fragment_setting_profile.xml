<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg_color_ffffff"
    android:orientation="vertical"
    tools:context=".SettingProfile.SettingProfileActivity">

    <include
        layout="@layout/layout_header"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <include
        layout="@layout/layout_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <androidx.core.widget.NestedScrollView
            android:id="@+id/fragment_setting_profile_scroll_view"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fillViewport="true"
            android:overScrollMode="never">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <!-- Profile View -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_marginStart="16dp"
                        android:gravity="center_horizontal"
                        android:orientation="vertical">

                        <com.facebook.drawee.view.SimpleDraweeView
                            android:id="@+id/fragment_setting_profile_image_view"
                            android:layout_width="60dp"
                            android:layout_height="60dp"
                            android:background="@drawable/bg_profile"
                            app:actualImageScaleType="fitXY"
                            app:roundAsCircle="true" />

                        <TextView
                            android:id="@+id/fragment_setting_profile_text_view"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="2dp"
                            android:text="@string/text_setting_profile"
                            android:textColor="@color/text_color_222222"
                            android:textSize="@dimen/size_10" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="21dp"
                        android:layout_marginEnd="16dp"
                        android:orientation="vertical">

                        <!-- ID View -->
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/text_email"
                                android:textColor="@color/text_color_222222"
                                android:textSize="@dimen/size_13" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text=" : "
                                android:textColor="@color/text_color_222222"
                                android:textSize="@dimen/size_13" />

                            <TextView
                                android:id="@+id/fragment_setting_profile_email_text_view"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textColor="@color/text_color_222222"
                                android:textSize="@dimen/size_13" />

                        </LinearLayout>

                        <!-- Name View -->
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="5dp"
                            android:orientation="horizontal">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/text_name"
                                android:textColor="@color/text_color_222222"
                                android:textSize="@dimen/size_13" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text=" : "
                                android:textColor="@color/text_color_222222"
                                android:textSize="@dimen/size_13" />

                            <TextView
                                android:id="@+id/fragment_setting_profile_name_text_view"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textColor="@color/text_color_222222"
                                android:textSize="@dimen/size_13" />

                        </LinearLayout>

                        <!-- Phone Number View -->
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="5dp"
                            android:orientation="horizontal">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/text_phone_number_2"
                                android:textColor="@color/text_color_222222"
                                android:textSize="@dimen/size_13" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text=" : "
                                android:textColor="@color/text_color_222222"
                                android:textSize="@dimen/size_13" />

                            <TextView
                                android:id="@+id/fragment_setting_profile_phone_number_text_view"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textColor="@color/text_color_222222"
                                android:textSize="@dimen/size_13" />

                        </LinearLayout>

                        <!-- Interlinked Company View -->
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="5dp"
                            android:orientation="horizontal">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/text_interlinked_company"
                                android:textColor="@color/text_color_222222"
                                android:textSize="@dimen/size_13" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text=" : "
                                android:textColor="@color/text_color_222222"
                                android:textSize="@dimen/size_13" />

                            <TextView
                                android:id="@+id/fragment_setting_profile_my_company_count_text_view"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textColor="@color/text_color_222222"
                                android:textSize="@dimen/size_13" />

                        </LinearLayout>

                    </LinearLayout>

                </LinearLayout>

                <!-- Phone Number -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="32dp"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="16dp"
                        android:text="@string/text_phone_number"
                        android:textColor="@color/text_color_222222"
                        android:textSize="@dimen/size_14"
                        android:textStyle="bold" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="48dp"
                        android:layout_marginStart="16dp"
                        android:layout_marginTop="9dp"
                        android:layout_marginEnd="16dp"
                        android:gravity="center_vertical"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/fragment_setting_profile_modify_phone_number_text_view"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:background="@drawable/bg_boarder"
                            android:gravity="center_vertical"
                            android:paddingStart="18dp"
                            android:paddingEnd="18dp"
                            android:textColor="@color/text_color_bebebe"
                            android:textSize="@dimen/size_14" />

                        <TextView
                            android:id="@+id/fragment_setting_profile_phone_number_modify_text_view"
                            android:layout_width="75dp"
                            android:layout_height="match_parent"
                            android:layout_marginStart="7dp"
                            android:background="@drawable/bg_boarder_black"
                            android:gravity="center"
                            android:text="@string/text_modify"
                            android:textColor="@color/text_color_222222"
                            android:textSize="@dimen/size_14"
                            android:textStyle="bold" />

                    </LinearLayout>

                </LinearLayout>

                <!-- Address View -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="17dp"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="16dp"
                        android:text="@string/text_address"
                        android:textColor="@color/text_color_222222"
                        android:textSize="@dimen/size_14"
                        android:textStyle="bold" />

                    <!-- Select Nation Spinner -->
                    <com.skydoves.powerspinner.PowerSpinnerView
                        android:id="@+id/fragment_setting_profile_select_nation_spinner"
                        android:layout_width="150dp"
                        android:layout_height="44dp"
                        android:layout_marginStart="16dp"
                        android:layout_marginTop="9dp"
                        android:background="@drawable/bg_boarder"
                        android:gravity="center"
                        android:hint="@string/text_select_nation"
                        android:padding="10dp"
                        android:textColor="@color/text_color_222222"
                        android:textColorHint="@color/text_color_222222"
                        android:textSize="@dimen/size_14"
                        app:spinner_arrow_animate="true"
                        app:spinner_arrow_drawable="@drawable/icon_arrow"
                        app:spinner_arrow_gravity="end"
                        app:spinner_arrow_padding="8dp"
                        app:spinner_arrow_show="true"
                        app:spinner_item_height="46dp"
                        app:spinner_popup_animation="dropdown"
                        app:spinner_popup_background="@drawable/bg_dialog_radius_popup_10dp"
                        app:spinner_popup_elevation="14dp" />

                    <LinearLayout
                        android:id="@+id/fragment_setting_profile_postal_code_view"
                        android:layout_width="match_parent"
                        android:layout_height="48dp"
                        android:layout_marginTop="7dp"
                        android:layout_marginStart="16dp"
                        android:layout_marginEnd="16dp"
                        android:orientation="horizontal">

                        <!-- Postal Code Text View -->
                        <TextView
                            android:id="@+id/fragment_setting_profile_postal_code_text_view"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:background="@drawable/bg_edit_box"
                            android:gravity="center_vertical"
                            android:paddingStart="18dp"
                            android:paddingEnd="18dp"
                            android:hint="@string/text_postal_code"
                            android:textColorHint="@color/text_color_bebebe"
                            android:textColor="@color/text_color_222222"
                            android:textSize="@dimen/size_14" />

                        <!-- Search Text View -->
                        <TextView
                            android:id="@+id/fragment_setting_profile_post_code_search_text_view"
                            android:layout_width="72dp"
                            android:layout_height="match_parent"
                            android:layout_marginStart="7dp"
                            android:background="@drawable/bg_button_radius_f0f0f0"
                            android:gravity="center"
                            android:text="@string/text_search"
                            android:textColor="@color/text_color_9d9d9d"
                            android:textSize="@dimen/size_14" />

                    </LinearLayout>

                    <!-- Address View -->
                    <LinearLayout
                        android:id="@+id/fragment_setting_profile_address_view"
                        android:layout_width="match_parent"
                        android:layout_height="48dp"
                        android:layout_marginTop="7dp"
                        android:layout_marginStart="16dp"
                        android:layout_marginEnd="16dp"
                        android:background="@drawable/bg_boarder"
                        android:gravity="center_vertical"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/fragment_setting_profile_address_text_view"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:gravity="center_vertical"
                            android:hint="@string/text_hint_input_address"
                            android:maxLines="1"
                            android:paddingStart="18dp"
                            android:paddingEnd="18dp"
                            android:textColor="@color/text_color_222222"
                            android:textColorHint="@color/text_color_bebebe"
                            android:textSize="@dimen/size_14" />

                    </LinearLayout>

                    <!-- Address View -->
                    <LinearLayout
                        android:id="@+id/fragment_setting_profile_international_address_text"
                        android:layout_width="match_parent"
                        android:layout_height="48dp"
                        android:layout_marginTop="7dp"
                        android:layout_marginStart="16dp"
                        android:layout_marginEnd="16dp"
                        android:background="@drawable/bg_boarder"
                        android:gravity="center_vertical"
                        android:orientation="vertical"
                        android:visibility="gone">

                        <!-- Address Detail Edit Text -->
                        <EditText
                            android:id="@+id/fragment_setting_profile_international_address_edit_text"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:paddingStart="18dp"
                            android:paddingEnd="18dp"
                            android:background="@null"
                            android:hint="@string/text_hint_input_address"
                            android:imeOptions="actionNext"
                            android:inputType="text"
                            android:maxLines="1"
                            android:textColor="@color/text_color_222222"
                            android:textColorHint="@color/text_color_bebebe"
                            android:textSize="@dimen/size_14" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="48dp"
                        android:layout_marginTop="7dp"
                        android:layout_marginStart="16dp"
                        android:layout_marginEnd="16dp"
                        android:gravity="center_vertical"
                        android:orientation="horizontal">

                        <!-- Address Detail View -->
                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:background="@drawable/bg_boarder"
                            android:gravity="center_vertical"
                            android:orientation="horizontal">

                            <!-- Address Detail Edit Text -->
                            <EditText
                                android:id="@+id/fragment_setting_profile_address_detail_edit_text"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:paddingStart="18dp"
                                android:paddingEnd="18dp"
                                android:background="@null"
                                android:hint="@string/text_hint_input_address_detail"
                                android:imeOptions="actionNext"
                                android:inputType="text"
                                android:maxLines="1"
                                android:textColor="@color/text_color_222222"
                                android:textColorHint="@color/text_color_bebebe"
                                android:textSize="@dimen/size_14" />

                        </LinearLayout>

                        <ImageView
                            android:id="@+id/fragment_setting_profile_address_image_view"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:padding="5dp"
                            android:src="@drawable/icon_location_black" />

                    </LinearLayout>

                    <TextView
                        android:id="@+id/fragment_setting_profile_change_address_text_view"
                        android:layout_width="match_parent"
                        android:layout_height="48dp"
                        android:layout_marginTop="19dp"
                        android:layout_marginStart="16dp"
                        android:layout_marginEnd="16dp"
                        android:background="@drawable/bg_boarder_black"
                        android:gravity="center"
                        android:text="@string/text_change_address"
                        android:textColor="@color/text_color_222222"
                        android:textSize="@dimen/size_14"
                        android:textStyle="bold" />

                </LinearLayout>

                <View
                    android:layout_width="1dp"
                    android:layout_height="0dp"
                    android:layout_weight="1" />

            </LinearLayout>

        </androidx.core.widget.NestedScrollView>

        <LinearLayout
            android:id="@+id/fragment_setting_profile_loading_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:background="@drawable/bg_radius_enable_gray_2"
            android:gravity="center"
            android:orientation="vertical"
            android:visibility="gone">

            <com.airbnb.lottie.LottieAnimationView
                android:id="@+id/fragment_setting_profile_loading_lottie_view"
                android:layout_width="100dp"
                android:layout_height="80dp"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="20dp"
                app:lottie_autoPlay="false"
                app:lottie_loop="true"
                app:lottie_rawRes="@raw/airplane2" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="-5dp"
                android:layout_marginBottom="20dp"
                android:letterSpacing="0.2"
                android:text="@string/text_loading"
                android:textColor="@color/text_color_ffffff"
                android:textSize="16sp"
                android:textStyle="bold" />

        </LinearLayout>

    </RelativeLayout>

    <TextView
        android:id="@+id/fragment_setting_profile_member_withdrawal_text_view"
        android:layout_width="match_parent"
        android:layout_height="51dp"
        android:gravity="center"
        android:text="@string/text_member_withdrawal"
        android:textColor="@color/text_color_222222"
        android:textSize="@dimen/size_14"
        android:textStyle="bold"/>

</LinearLayout>