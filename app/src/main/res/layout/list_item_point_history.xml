<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:fresco="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:orientation="horizontal"
        android:gravity="center_vertical" >

        <TextView
            android:id="@+id/list_item_point_history_date_text_view"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.4"
            android:gravity="center"
            android:text="@string/text_date"
            android:textColor="@color/text_color_222222"
            android:textSize="@dimen/size_12" />

        <TextView
            android:id="@+id/list_item_point_history_content_text_view"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text="@string/text_contents"
            android:textColor="@color/text_color_222222"
            android:textSize="@dimen/size_12" />

        <TextView
            android:id="@+id/list_item_point_history_point_text_view"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.4"
            android:gravity="center"
            android:text="@string/text_gp"
            android:textColor="@color/text_color_222222"
            android:textSize="@dimen/size_12" />

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.3dp"
        android:background="@color/bg_color_e1e1e1" />

</LinearLayout>