<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/bg_color_ffffff"
        android:orientation="vertical"
        tools:context=".SettingProfile.SettingProfileActivity">

    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"
            android:text="@string/text_title_success_member_withdrawal"
            android:textColor="@color/text_color_222222"
            android:textSize="@dimen/size_24"/>

    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="29dp"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"
            android:text="@string/text_message_success_member_withdrawal"
            android:textColor="@color/text_color_9f9f9f"
            android:textSize="@dimen/size_16"/>

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="90dp"
            android:layout_marginTop="35dp"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"
            android:orientation="vertical"
            android:background="@drawable/bg_boarder_e1e1e1"
            android:gravity="center" >

        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/text_due_date"
                android:textColor="@color/text_color_222222"
                android:textSize="@dimen/size_16"
                android:textStyle="bold" />

        <TextView
                android:id="@+id/fragment_success_member_withdrawal_end_date_text_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="7dp"
                android:textColor="@color/text_color_222222"
                android:textSize="@dimen/size_14" />

    </LinearLayout>

    <View
            android:layout_width="1dp"
            android:layout_height="0dp"
            android:layout_weight="1" />

    <TextView
            android:id="@+id/fragment_success_member_withdrawal_confirm_text_view"
            android:layout_width="match_parent"
            android:layout_height="51dp"
            android:gravity="center"
            android:background="@color/bg_color_0d4d97"
            android:text="@string/text_confirm"
            android:textColor="@color/text_color_ffffff"
            android:textSize="@dimen/size_17"
            android:textStyle="bold" />

</LinearLayout>