<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg_color_ffffff"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="13dp"
        android:orientation="horizontal"
        android:gravity="center_vertical" >

        <com.skydoves.powerspinner.PowerSpinnerView
            android:id="@+id/layout_custom_dialog_sales_bottom_person_setting_member_spinner"
            android:layout_width="match_parent"
            android:layout_height="44dp"
            android:background="@drawable/bg_boarder"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"
            android:gravity="center"
            android:padding="10dp"
            android:textColor="@color/text_color_222222"
            android:textColorHint="@color/text_color_222222"
            android:textSize="@dimen/size_14"
            app:spinner_arrow_drawable="@drawable/icon_spinner_arrow"
            app:spinner_arrow_gravity="end"
            app:spinner_arrow_padding="8dp"
            app:spinner_item_array="@array/array_company_member_setting"
            app:spinner_popup_animation="dropdown"
            app:spinner_popup_background="@drawable/bg_dialog_radius_popup_10dp"
            app:spinner_popup_elevation="14dp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginTop="8dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:gravity="center_vertical"
        android:background="@drawable/bg_code_phone_number_2" >

        <EditText
            android:id="@+id/layout_custom_dialog_sales_bottom_person_setting_member_search_edit_text"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"
            android:background="@null"
            android:inputType="text"
            android:imeOptions="actionDone"
            android:hint="@string/text_hint_input_id_phone_number"
            android:textColorHint="@color/text_color_bebebe"
            android:textColor="@color/text_color_222222"
            android:textSize="@dimen/size_14" />

    </LinearLayout>

    <TextView
        android:id="@+id/layout_custom_dialog_sales_bottom_person_setting_member_search_text_view"
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:layout_marginTop="22dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="30dp"
        android:gravity="center"
        android:background="@drawable/bg_button_radius_blue"
        android:text="@string/text_search"
        android:textColor="@color/text_color_ffffff"
        android:textSize="@dimen/size_14"
        android:textStyle="bold" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/layout_custom_dialog_sales_bottom_person_setting_member_search_recycler_view"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_marginBottom="22dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:padding="2dp"
        android:background="@drawable/bg_boarder"
        android:scrollbars="vertical"
        android:overScrollMode="never"/>

</LinearLayout>