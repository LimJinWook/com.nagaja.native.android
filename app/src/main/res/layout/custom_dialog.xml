<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:fresco="http://schemas.android.com/apk/res-auto"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="300dp"
    android:layout_height="wrap_content"
    android:background="@drawable/bg_dialog_radius_popup"
    android:orientation="vertical">

    <!-- Title Text View -->
    <TextView
            android:id="@+id/custom_dialog_title_text_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_marginTop="19dp"
            android:text="Title Text"
            android:textColor="@color/text_color_000000"
            android:textSize="@dimen/size_17"
            android:textStyle="bold" />

    <!-- Message Text View -->
    <TextView
            android:id="@+id/custom_dialog_message_text_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_marginTop="20dp"
            android:lineSpacingExtra="5dp"
            android:text="Message Text"
            android:textColor="@color/text_color_000000"
            android:textSize="@dimen/size_13" />

    <!-- Bottom View -->
    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="43dp"
            android:layout_marginTop="19dp"
            android:orientation="vertical" >

        <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:background="@color/bg_color_5c3c3c43" />

        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:gravity="center" >

            <!-- Cancel Text View -->
            <LinearLayout
                    android:id="@+id/custom_dialog_cancel_view"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="horizontal" >

                <TextView
                        android:id="@+id/custom_dialog_cancel_text_view"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:text="@string/text_cancel"
                        android:textColor="@color/text_color_007aff"
                        android:textSize="@dimen/size_17" />

                <View
                        android:layout_width="0.5dp"
                        android:layout_height="match_parent"
                        android:background="@color/bg_color_5c3c3c43" />

            </LinearLayout>

            <!-- Confirm Text View -->
            <TextView
                    android:id="@+id/custom_dialog_confirm_text_view"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="@string/text_confirm"
                    android:textColor="@color/text_color_007aff"
                    android:textSize="@dimen/size_17"
                    android:textStyle="bold"/>

        </LinearLayout>

    </LinearLayout>

</LinearLayout>
